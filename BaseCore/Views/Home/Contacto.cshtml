@using Domain.Entidades.Contacto;
@using static Common.Enums.Enums
@model ContactoVM;

@{
    ViewData["Title"] = "Contacto";
}

<main role="main" class="contenedor seccion">
    <h1>Contacto</h1>

    <div asp-validation-summary="All" class="asp-validation-error"></div>

    @if (ViewData["Error"] != null)
    {
        <p class="alerta error">@ViewData["Error"]</p>
    }

    @if (ViewData["Success"] != null)
    {
        <p class="alerta exito">@ViewData["Success"]</p>
    }

    <picture>
        <source srcset="~/build/img/destacada3.webp" type="image/webp" />
        <source srcset="~/build/img/destacada3.jpg" type="image/jpeg" />
        <img loading="lazy" src="~/build/img/destacada3.jpg" alt="Imagen contacto" />
    </picture>

    <h2>Llene el formulario de Contacto</h2>
    <form class="formulario" asp-action="Contacto">
        <fieldset>
            <legend>Información Personal</legend>

            <label asp-for="Nombre">Nombre:</label>
            <input asp-for="Nombre" type="text" placeholder="Tu Nombre" />

            <label asp-for="Mensaje">Mensaje:</label>
            <textarea asp-for="Mensaje"></textarea>
        </fieldset>

        <fieldset>
            <legend>Información sobre la propiedad</legend>

            <label asp-for="OpcionVendeCompra">Vende o Compra:</label>
            <select asp-for="OpcionVendeCompra" asp-items="Html.GetEnumSelectList<OpcionCompraVenta>()">
                <option value="" selected disabled>-- Seleccione una opción --</option>
            </select>

            <label asp-for="PrecioPresupuesto">Precio o Presupuesto:</label>
            <input asp-for="PrecioPresupuesto" type="number" placeholder="Tu Precio o Presupuesto" />
        </fieldset>
        <fieldset>
            <legend>Contacto</legend>

            <p>Como desea ser contactado</p>

            <div class="forma-contacto">
                @foreach (var opcion in ViewBag.opcionesContacto)
                {
                    <label for="@opcion.Value">@opcion.Text</label>
                    <input 
                       type="radio"
                       value="@opcion.Value"
                       id="@opcion.Value"
                       name="OpcionContacto" 
                       checked="@opcion.Selected" />
                }
            </div>

            <div id="contacto"></div>
        </fieldset>
        <input type="submit" class="boton-verde" value="Enviar" />
    </form>
</main>